Screen{
    layout: vertical;
}

Button{
    margin: 1 7;
    height: 9%;
    width: 50%;
    max-width: 25;
    max-height: 5;
}

#main_container{
    align: center middle;
    width: 100%;
    height: 100%;
}

#main_container #start{
    border: heavy $success 100%;
}

#player_name{
    border: tall $success 60%;
    width: 30%;
    min-width: 30;
}

#main_container #start:hover{
    border: thick $success 80%;
}

#main_container #exit{
    border: heavy #dc143c 100%;
}

#main_container #exit:hover{
    border: thick #dc143c 80%;
}